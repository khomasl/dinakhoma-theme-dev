<section
  id="feedbacks"
  class="main-container bg-violet-400 text-white font-manrope text-center lg:text-left flex items-center justify-center flex-col"
>
  <p class="pt-5 lg:pt-0 font-bold text-center lg:text-left">{{ section.settings.header }}</p>
  <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-10 mt-4 lg:max-w-2/3 text-center lg:text-left">
    {{ section.settings.title }}
  </h1>

  <div class="w-full flex gap-5 items-center pb-5 lg:pb-0">
    {% render 'slider-arrow', direction: 'left', action: 'previous', navigation: 'feedback-swiper-button-prev' %}

    <div class="swiper w-full aspect-[0.8] ss:aspect-[1] sx:aspect-[1.4] sm:aspect-[2.2] md:aspect-[2.5] xl:aspect-[4]">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% render 'feedback-card', feedback: block.settings %}
        {% endfor %}
      </div>
    </div>

    {% render 'slider-arrow', direction: 'right', action: 'next', navigation: 'feedback-swiper-button-next' %}
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper('.swiper', {
      spaceBetween: 50,
      slidesPerView: 1,
      loop: true,
      breakpoints: {
        760: {
          slidesPerView: 2,
        },
        1024: {
          slidesPerView: 3,
        },
      },
      navigation: {
        nextEl: '.feedback-swiper-button-next',
        prevEl: '.feedback-swiper-button-prev',
      },
    });
  });
</script>

{% schema %}
{
  "name": "Feedback Section",
  "tag": "section",
  "class": "feedback-section",
  "settings": [
    {
      "type": "text",
      "id": "header",
      "label": "Header",
      "default": "Customer Feedback"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "What our clients say"
    }
  ],
  "blocks": [
    {
      "type": "feedback",
      "name": "Feedback",
      "settings": [
        {
          "type": "image_picker",
          "id": "src",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "John Doe"
        },
        {
          "type": "textarea",
          "id": "quote",
          "label": "Feedback text",
          "default": "Great service and product quality!"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Feedback Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
