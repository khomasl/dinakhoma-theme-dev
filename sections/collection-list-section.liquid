<section id="collection-list" class="main-container font-manrope">
  <p class="font-bold text-violet-400 text-center lg:text-left">{{ section.settings.header }}</p>
  <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-10 mt-4 max-w-2/3 text-center lg:text-left">
    {{ section.settings.title }}
  </h1>
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 lg:gap-6">
    {% for block in section.blocks %}
      {% assign product = all_products[block.settings.product] %}
      {% if product %}
        <div class="border rounded-xl p-4 flex flex-col items-center text-center">
          <a href="{{ product.url }}">
            <img
              src="{{ product.featured_image | image_url: '400x400' }}"
              alt="{{ product.title }}"
              width="100%"
              height="100%"
              class="rounded-lg mb-4"
            >
            <h2 class="font-semibold text-lg mb-2">{{ product.title }}</h2>
            <p class="text-violet-500 font-bold">{{ product.price | money }}</p>
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Collection Section",
  //"tag": "section",
  //"class": "collection-list-section",
  "settings": [
    {
      "type": "text",
      "id": "header",
      "label": "Header Text",
      "default": "Категорія"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title Text",
      "default": "Наша колекція"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select product"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Collection Section"
    }
  ]
}
{% endschema %}
