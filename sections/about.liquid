<section id="about" class="lg:grid grid-cols-1 lg:grid-cols-2 w-full main-container justify-center items-center">
  <div class="lg:px-0 pt-5 lg:pt-0 mb-10 lg:mb-0">
    <div class="relative w-full h-full overflow-hidden rounded-3xl px-10 lg:px-0">
      {% if section.settings.image %}
        <img
          src="{{ section.settings.image | image_url }}"
          alt="{{ section.settings.title | escape }}"
          title="{{ section.settings.title }}. {{ section.settings.description }}"
          width="100%"
          height="100%"
          class="w-full h-full object-cover rounded-3xl aspect-square"
        >
      {% endif %}
    </div>
  </div>

  <div class="row-start-1 lg:col-start-2 lg:px-0 lg:ml-16 pb-5 lg:pb-0">
    <p class="text-violet-400 font-bold text-center lg:text-left">
      {{ section.settings.header }}
    </p>

    <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-8 mt-2 lg:max-w-2/3 lg:px-0 text-center lg:text-left">
      {{ section.settings.title }}
    </h1>

    <h2 class="text-xl text-gray-900 mb-4 text-center lg:text-left">
      {{ section.settings.description }}
    </h2>

    <div class="flex justify-between mb-8 px-2 sm:px-10 lg:px-0 xl:mr-10">
      {% for block in section.blocks %}
        <div class="flex gap-2 md:gap-4 items-center">
          <span class="text-xl sm:text-2xl md:text-3xl font-bold">{{ block.settings.title }}</span>
          <span class="text-gray-800 text-sm sm:text-base">{{ block.settings.description }}</span>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.button_text and section.settings.button_link %}
      <div class="w-fit mx-auto lg:mx-0 text-white">
        <a
          href="{{ section.settings.button_link }}"
          class="bg-gray-400 rounded-lg py-4 px-8 font-bold text-center text-xl text-white hover:opacity-90 transition-all mx-auto w-fit lg:mx-0"
        >
          {{ section.settings.button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "About Section",
  "tag": "section",
  "class": "about-section",
  "settings": [
    {
      "type": "text",
      "id": "header",
      "label": "Header",
      "default": "Section Header"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "About Us"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "We are committed to delivering..."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn More"
    }
  ],
  "blocks": [
    {
      "type": "client",
      "name": "Clients",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "800+"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "КЛІЄНТІВ"
        }
      ]
    },
    {
      "type": "item",
      "name": "Items",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "1500+"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "ВИРОБІВ"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "About Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
