<button
  id="scrollToTopBtn"
  aria-label="Scroll to top"
  class="fixed bottom-5 lg:bottom-10 right-5 lg:right-10 z-50 w-13 h-13 opacity-0 translate-x-10 -rotate-90 transition-all duration-1000 rounded-full overflow-hidden shadow-[4px_0_13px_-1px_rgba(116,83,142,0.9)] hover:shadow-[4px_0_13px_-1px_rgba(0,0,0,0.3)] hover:scale-105"
>
  <img
    height="100%"
    width="100%"
    src="{{ 'icon-arrow-left.svg' | asset_url }}"
    alt="Scroll to top"
  >
</button>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const btn = document.getElementById('scrollToTopBtn');

    function toggleVisibility() {
      const hiddenBtn = ['opacity-0', 'translate-x-10', '-rotate-90'];
      const visibilityBtn = ['opacity-90', 'translate-x-0', 'rotate-90'];
      if (window.scrollY > 500) {
        btn.classList.remove(...hiddenBtn);
        btn.classList.add(...visibilityBtn);
      } else {
        btn.classList.add(...hiddenBtn);
        btn.classList.remove(...visibilityBtn);
      }
    }

    window.addEventListener('scroll', toggleVisibility);

    btn.addEventListener('click', function () {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    });
  });
</script>
